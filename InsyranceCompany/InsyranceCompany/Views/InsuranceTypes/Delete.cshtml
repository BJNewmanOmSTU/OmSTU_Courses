@model InsyranceCompany.InsuranceType

@{
    ViewData["Title"] = "Удалить";
}

    <h1>Удалить</h1>

<h3>Вы действительно хотите удалить?</h3>
<div>
    <h4>Вид страхования</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Вид страхования
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuranceName)
        </dd>
        <dt class = "col-sm-2">
            Страховая сумма
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuranceSummary)
        </dd>
        <dt class = "col-sm-2">
            Тарифная ставка
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TarifRate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="InsuranceTypeId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Обратно к списку</a>
    </form>
</div>
