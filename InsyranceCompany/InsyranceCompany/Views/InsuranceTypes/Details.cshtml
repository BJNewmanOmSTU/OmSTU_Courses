@model InsyranceCompany.InsuranceType

@{
    ViewData["Title"] = "Описание";
}

<h1>Описание вида страхования</h1>

<div>
    <h4>Вид страхования</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Вид страхования
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuranceName)
        </dd>
        <dt class = "col-sm-2">
            Страховая сумма
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuranceSummary)
        </dd>
        <dt class = "col-sm-2">
            Тарифная ставка
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TarifRate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.InsuranceTypeId">Изменить</a> |
    <a asp-action="Index">Обратно к списку</a>
</div>
