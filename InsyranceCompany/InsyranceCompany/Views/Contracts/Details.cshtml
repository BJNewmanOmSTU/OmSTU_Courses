@model InsyranceCompany.Contracts

@{
    ViewData["Title"] = "Описание";
}

    <h1>Описание</h1>

<div>
    <h4>Контракт</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Дата заключения
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateConclusion)
        </dd>
        <dt class = "col-sm-2">
            Оплата
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Payment)
        </dd>
        <dt class = "col-sm-2">
            Агент
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Agent.AgentId)
        </dd>
        <dt class = "col-sm-2">
            Клиент
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Client.ClientId)
        </dd>
        <dt class = "col-sm-2">
            Вид страхования
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuranceType.InsuranceTypeId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ContractId">Изменить</a> |
    <a asp-action="Index">Обратно к списку</a>
</div>
