@model InsyranceCompany.Contracts

@{
    ViewData["Title"] = "Удалить";
}

<h1>Удалить</h1>

<h3>Вы действительно хотите удалить этот контракт?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Дата заключения
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateConclusion)
        </dd>
        <dt class = "col-sm-2">
            Оплата
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Payment)
        </dd>
        <dt class = "col-sm-2">
            Агент
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Agent.AgentId)
        </dd class>
        <dt class = "col-sm-2">
            Клиент
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Client.ClientId)
        </dd class>
        <dt class = "col-sm-2">
            Вид страхования
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuranceType.InsuranceTypeId)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ContractId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>
