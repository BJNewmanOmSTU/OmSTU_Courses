@model InsyranceCompany.Filials

@{
    ViewData["Title"] = "Описание";
}

<h1>Описание</h1>

<div>
    <h4>Филиал</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Адрес
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FilialAddress)
        </dd>
        <dt class = "col-sm-2">
            Телефон
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FilialPhone)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.FilialId">Изменить</a> |
    <a asp-action="Index">Обратно к списку</a>
</div>
