@model InsyranceCompany.Clients

@{
    ViewData["Title"] = "Изменить";
}

<h1>Изменить</h1>

<h4>Клиента</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClientId" />
            <div class="form-group">
                <label asp-for="CName" class="control-label">Имя</label>
                <input asp-for="CName" class="form-control" />
                <span asp-validation-for="CName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPatronymic" class="control-label">Отчество</label>
                <input asp-for="CPatronymic" class="form-control" />
                <span asp-validation-for="CPatronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CSurname" class="control-label">Фамилия</label>
                <input asp-for="CSurname" class="form-control" />
                <span asp-validation-for="CSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthYear" class="control-label">Дата рождения</label>
                <input asp-for="BirthYear" class="form-control" />
                <span asp-validation-for="BirthYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPhone" class="control-label">Телефон</label>
                <input asp-for="CPhone" class="form-control" />
                <span asp-validation-for="CPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Обратно к списку</a>
</div>

